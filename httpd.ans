- hosts: all
  remote_user: ec2-user
  become: yes
  tasks:
     - name: Install Apache
       ansible.builtin.yum:
          name: httpd
          state: present
     - name: start Apache
       service:
          name: httpd
          state: started
     - name: config index file
       ansible.builtin.copy:
          src: ./index.html
          dest: /var/www/html/index.html
          mode: '0777'          
